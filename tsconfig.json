{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"files": ["./src/index.d.ts", "./node_modules/@types/node/index.d.ts"],

	"include": ["src/**/*"],
	"exclude": ["node_modules"],
	"ts-node": {
		"require": ["tsconfig-paths/register"]
	}
}
